<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F89B2A"
        tools:context=".LoginNameAndEmailActivity">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAW INDIA"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            android:textColor="#FFF"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/backButton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_marginTop="-60dp"
            app:layout_constraintTop_toBottomOf="@id/circularLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingHorizontal="40dp"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="Set Up Your SAW India Login Account"
                android:textStyle="bold"
                android:textColor="#F89B2A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Your name and email helps us to maintain a strong database and communicate with you better."
                android:textStyle="bold"
                android:textColor="#F89B2A"
                app:layout_constraintTop_toBottomOf="@id/t1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F89B2A"
                android:layout_marginHorizontal="40dp"
                android:hint="NAME"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/t2"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F89B2A"
                android:layout_marginHorizontal="40dp"
                android:hint="EMAIL (OPTIONAL)"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/nameEditText"/>
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:text="REGISTER"
                android:textColor="#FFF"
                android:layout_marginTop="50dp"
                android:background="@drawable/fab_button_background"
                app:layout_constraintTop_toBottomOf="@id/emailEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/circularLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="13dp"
            android:src="@drawable/final_logo_saw"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="-60dp"
            android:background="@drawable/circular_logo"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/cow_silhoulette"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_b_silhouette"
            android:background="#FFF"
            app:layout_constraintTop_toBottomOf="@id/cLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
