<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/background_for_donations_history_card"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        android:src="@drawable/card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amountTV"
            android:text="AMOUNT"
            android:gravity="right"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/statusTV"
            android:text="STATUS"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/paymentIdTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment ID : pay_I5B5F79zMR6kba"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"/>

    <TextView
        android:id="@+id/dateAndTimeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mon Oct 04 13:01:37 GMT+05:30 2021"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/paymentIdTV" />

</androidx.constraintlayout.widget.ConstraintLayout>