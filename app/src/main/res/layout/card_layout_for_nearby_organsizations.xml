<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/c1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/background_for_nearby_search_card_view"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/shelterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Shelter Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/shelterName" />


    <TextView
        android:id="@+id/shelterPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Phone Number"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@+id/titleBottomLine"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/shelterAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Address"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelterPhone"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="-20dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/background_for_call_button"
        android:text="CALL"
        app:layout_constraintTop_toBottomOf="@id/c1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>